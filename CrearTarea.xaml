<Window x:Class="TaskyPad.CrearTarea"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskyPad" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        mc:Ignorable="d"
        Title="CrearTarea" Height="450" Width="800">
    <Grid>
        <TextBox x:Name="TituloTarea" HorizontalAlignment="Left" Margin="81,69,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="DescripcionTarea" HorizontalAlignment="Left" Margin="81,119,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <DatePicker x:Name="FechaTarea" HorizontalAlignment="Left" Margin="81,179,0,0" VerticalAlignment="Top"/>
        <Button x:Name="BtnCrearTarea" Content="Button" HorizontalAlignment="Left" Margin="81,267,0,0" VerticalAlignment="Top" Click="BtnCrearTarea_Click"/>
        <xctk:TimePicker x:Name="TimePickerTarea" 
                         Width="120" Height="30"
                         Format="Custom" FormatString="HH:mm"/>
    </Grid>
</Window>
