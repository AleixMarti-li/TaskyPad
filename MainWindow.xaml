<Window x:Name="ventanaPrincipal" x:Class="TaskyPad.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskyPad"
        mc:Ignorable="d"
        Title="TaskyPad" 
        Height="1000" 
        Width="1400" 
        Background="#ECF0F1"
        WindowStartupLocation="CenterScreen"
        MinHeight="700"
        MinWidth="1000"
        FontFamily="Segoe UI, Arial, sans-serif">
    <Window.Resources>
        <!-- Color Palette -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#2C3E50"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#3498DB"/>
        <SolidColorBrush x:Key="SuccessColor" Color="#27AE60"/>
        <SolidColorBrush x:Key="WarningColor" Color="#F39C12"/>
        <SolidColorBrush x:Key="DangerColor" Color="#E74C3C"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#ECF0F1"/>
        <SolidColorBrush x:Key="CardBackground" Color="#FFFFFF"/>
        <SolidColorBrush x:Key="TextDark" Color="#2C3E50"/>
        <SolidColorBrush x:Key="TextLight" Color="#95A5A6"/>
        <SolidColorBrush x:Key="BorderColor" Color="#D5DBDB"/>
        <SolidColorBrush x:Key="ShadowColor" Color="#000000"/>

        <!-- Font Family -->
        <FontFamily x:Key="PrimaryFont">Segoe UI, Arial, sans-serif</FontFamily>

        <!-- Shadows -->
        <DropShadowEffect x:Key="SoftShadow" Color="#000000" BlurRadius="6" Opacity="0.1" ShadowDepth="2"/>
        <DropShadowEffect x:Key="MediumShadow" Color="#000000" BlurRadius="12" Opacity="0.15" ShadowDepth="4"/>
        <DropShadowEffect x:Key="HardShadow" Color="#000000" BlurRadius="20" Opacity="0.2" ShadowDepth="6"/>

        <!-- Primary Button Style -->
        <Style x:Key="PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="{StaticResource SecondaryColor}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Padding" Value="16,10"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="8"
                                SnapsToDevicePixels="True">
                            <ContentPresenter x:Name="contentPresenter"
                                             Margin="{TemplateBinding Padding}"
                                             HorizontalAlignment="Center"
                                             VerticalAlignment="Center"
                                             RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#2980B9"/>
                                <Setter Property="Effect" Value="{StaticResource MediumShadow}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1F618D"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Success Button Style -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="{StaticResource SuccessColor}"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#229954"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Accent Button Style (Golden) -->
        <Style x:Key="AccentButtonStyle" TargetType="Button" BasedOn="{StaticResource PrimaryButtonStyle}">
            <Setter Property="Background" Value="#F39C12"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E67E22"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- Card Style -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource CardBackground}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="16"/>
            <Setter Property="Effect" Value="{StaticResource SoftShadow}"/>
        </Style>

        <!-- Section Title Style -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Margin" Value="0,0,0,16"/>
        </Style>

        <!-- Column Title Style -->
        <Style x:Key="ColumnTitleStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="{StaticResource TextDark}"/>
            <Setter Property="Margin" Value="0,0,0,12"/>
        </Style>

        <!-- Empty State Style -->
        <Style x:Key="EmptyStateStyle" TargetType="TextBlock">
            <Setter Property="FontFamily" Value="{StaticResource PrimaryFont}"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Foreground" Value="{StaticResource TextLight}"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="12"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="LineHeight" Value="20"/>
            <Setter Property="LineStackingStrategy" Value="BlockLineHeight"/>
        </Style>
    </Window.Resources>

    <Grid Background="#ECF0F1">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- ===== HEADER ===== -->
        <Border Grid.Row="0" Background="#2C3E50" Padding="0">
            <Grid Margin="32,20,32,20" VerticalAlignment="Center">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Logo and Title -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="✓" 
                              FontSize="40" 
                              Foreground="#3498DB"
                              FontWeight="Bold"
                              Margin="0,0,12,0"/>
                    <StackPanel VerticalAlignment="Center" Margin="0">
                        <TextBlock Text="TaskyPad" 
                                  FontSize="32" 
                                  FontWeight="Bold" 
                                  Foreground="White"
                                  Margin="0"/>
                        <TextBlock Text="Gestor de tareas y notas" 
                                  FontSize="12" 
                                  Foreground="#BDC3C7"
                                  Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>

                <Button x:Name="BtnConfig" Margin="1034,0,0,0" Click="BtnConfig_Click">
                    <TextBlock>Configuración</TextBlock>
                </Button>

                <!-- Update Button -->
                <Button x:Name="ButtonUpdateVersion"
                       Grid.Column="2"
                       Padding="16,8"
                       Margin="20,0,0,0"
                       Visibility="Hidden"
                       Click="ButtonUpdateVersion_Click"
                       Style="{StaticResource AccentButtonStyle}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="⬇️" FontSize="16" Margin="0,0,8,0"/>
                        <TextBlock x:Name="LblButtonDownloadUpdate" 
                                  Text="Actualización disponible" 
                                  VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </Grid>
        </Border>

        <!-- ===== MAIN CONTENT ===== -->
        <Grid Grid.Row="1" Margin="24,24,24,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="35*" MinWidth="300"/>
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="65*" MinWidth="500"/>
            </Grid.ColumnDefinitions>

            <!-- LEFT PANEL - NOTES -->
            <StackPanel Grid.Column="0" Margin="0">
                <!-- Notes Header -->
                <StackPanel Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="📝" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="Mis Notas" Style="{StaticResource SectionTitleStyle}" Margin="0"/>
                    </StackPanel>
                    <Button x:Name="BtnCrearNotas" 
                           Content="＋ Crear nueva nota" 
                           HorizontalAlignment="Stretch"
                           Height="48" 
                           Style="{StaticResource PrimaryButtonStyle}"
                           Click="BtnCrearNotas_Click"
                           FontSize="13"/>
                </StackPanel>

                <!-- Notes Container -->
                <Border Style="{StaticResource CardStyle}" 
                       Padding="0"
                       Background="White">
                    <Grid>
                        <!-- Empty State -->
                        <TextBlock x:Name="NoNotasMessage"
                                  Text="&#x0a;Aún no hay notas&#x0a;&#x0a;Crea una nueva haciendo clic en&#x0a;el botón anterior&#x0a;"
                                  Style="{StaticResource EmptyStateStyle}"
                                  Visibility="Visible"/>

                        <!-- Notes List -->
                        <ScrollViewer x:Name="NotesScrollViewer"
                                     VerticalScrollBarVisibility="Auto" 
                                     HorizontalScrollBarVisibility="Disabled"
                                     Padding="12">
                            <StackPanel x:Name="PanelNotas"/>
                        </ScrollViewer>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- RIGHT PANEL - TASKS -->
            <StackPanel Grid.Column="2" Margin="0">
                <!-- Tasks Header -->
                <StackPanel Margin="0,0,0,16">
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="0,0,0,12">
                        <TextBlock Text="⚡" FontSize="24" Margin="0,0,8,0"/>
                        <TextBlock Text="Gestor de Tareas" Style="{StaticResource SectionTitleStyle}" Margin="0"/>
                    </StackPanel>
                    <Button x:Name="CrearTarea" 
                           Content="＋ Nueva tarea" 
                           HorizontalAlignment="Stretch"
                           Height="48" 
                           Style="{StaticResource SuccessButtonStyle}"
                           Click="CrearTarea_Click"
                           FontSize="13"/>
                </StackPanel>

                <!-- Tasks Columns Container -->
                <Grid Margin="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- COLUMN 1: POR HACER -->
                    <StackPanel Grid.Column="0" Margin="0,0,8,0">
                        <Border Background="#FCF6F6" Padding="12,8" CornerRadius="6" Margin="0,0,0,12">
                            <StackPanel Margin="0">
                                <TextBlock Text="📋 Por hacer" Style="{StaticResource ColumnTitleStyle}" Margin="0,0,0,4"/>
                                <TextBlock Text="0 tareas" 
                                          FontSize="11" 
                                          Foreground="#95A5A6"
                                          x:Name="CountTareasNone"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                               Padding="0"
                               Background="White"
                               BorderBrush="#FFE0E0E0">
                            <Grid>
                                <!-- Empty State -->
                                <TextBlock x:Name="NoTareasPorHacerMessage"
                                          Text="&#x0a;Área libre&#x0a;&#x0a;Crea una tarea para comenzar&#x0a;"
                                          Style="{StaticResource EmptyStateStyle}"
                                          Visibility="Visible"/>

                                <!-- Tasks List -->
                                <ScrollViewer x:Name="ScrollViewerTareasNone"
                                             VerticalScrollBarVisibility="Auto" 
                                             HorizontalScrollBarVisibility="Disabled"
                                             MaxHeight="600"
                                             Padding="8">
                                    <StackPanel x:Name="PanelTareasNone"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- COLUMN 2: EN PROGRESO -->
                    <StackPanel Grid.Column="1" Margin="8,0">
                        <Border Background="#FFFDF4" Padding="12,8" CornerRadius="6" Margin="0,0,0,12">
                            <StackPanel Margin="0">
                                <TextBlock Text="⏳ En progreso" Style="{StaticResource ColumnTitleStyle}" Margin="0,0,0,4"/>
                                <TextBlock Text="0 tareas" 
                                          FontSize="11" 
                                          Foreground="#95A5A6"
                                          x:Name="CountTareasInProgress"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                               Padding="0"
                               Background="White"
                               BorderBrush="#FFE0E0E0">
                            <Grid>
                                <!-- Empty State -->
                                <TextBlock x:Name="NoTareasEnProgresoMessage"
                                          Text="&#x0a;Área libre&#x0a;&#x0a;Mueve tareas aquí para trabajar&#x0a;"
                                          Style="{StaticResource EmptyStateStyle}"
                                          Visibility="Visible"/>

                                <!-- Tasks List -->
                                <ScrollViewer x:Name="ScrollViewerTareasInProgress"
                                             VerticalScrollBarVisibility="Auto" 
                                             HorizontalScrollBarVisibility="Disabled"
                                             MaxHeight="600"
                                             Padding="8">
                                    <StackPanel x:Name="PanelTareasInProgress"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </StackPanel>

                    <!-- COLUMN 3: COMPLETADAS -->
                    <StackPanel Grid.Column="2" Margin="8,0,0,0">
                        <Border Background="#F0FDF7" Padding="12,8" CornerRadius="6" Margin="0,0,0,12">
                            <StackPanel Margin="0">
                                <TextBlock Text="✓ Completadas" Style="{StaticResource ColumnTitleStyle}" Margin="0,0,0,4"/>
                                <TextBlock Text="0 tareas" 
                                          FontSize="11" 
                                          Foreground="#95A5A6"
                                          x:Name="CountTareasDone"/>
                            </StackPanel>
                        </Border>

                        <Border Style="{StaticResource CardStyle}" 
                               Padding="0"
                               Background="White"
                               BorderBrush="#FFE0E0E0">
                            <Grid>
                                <!-- Empty State -->
                                <TextBlock x:Name="NoTareasCompletadasMessage"
                                          Text="&#x0a;Área libre&#x0a;&#x0a;¡Completa tareas para verlas aquí!&#x0a;"
                                          Style="{StaticResource EmptyStateStyle}"
                                          Visibility="Visible"/>

                                <!-- Tasks List -->
                                <ScrollViewer x:Name="ScrollViewerTareasDone"
                                             VerticalScrollBarVisibility="Auto" 
                                             HorizontalScrollBarVisibility="Disabled"
                                             MaxHeight="600"
                                             Padding="8">
                                    <StackPanel x:Name="PanelTareasDone"/>
                                </ScrollViewer>
                            </Grid>
                        </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
        </Grid>

        <!-- ===== FOOTER ===== -->
        <Border Grid.Row="2" Background="#34495E" Height="auto" Padding="32,16">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Version -->
                <TextBlock Grid.Column="0"
                          x:Name="versionApp" 
                          Text="Version 1.0.0" 
                          Foreground="#BDC3C7" 
                          FontSize="12"
                          VerticalAlignment="Center"/>

                <!-- Center Text -->
                <TextBlock Grid.Column="1"
                          Text="TaskyPad © 2025" 
                          Foreground="#95A5A6" 
                          VerticalAlignment="Center"
                          TextAlignment="Center"
                          FontSize="12"/>

                <!-- Author -->
                <TextBlock Grid.Column="2"
                          Text="Diseñado por Aleix Martí" 
                          Foreground="#BDC3C7" 
                          VerticalAlignment="Center"
                          TextAlignment="Right"
                          FontSize="12"/>
            </Grid>
        </Border>
    </Grid>
</Window>
